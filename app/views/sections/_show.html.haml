%section#current_section{ data: { section_id: section.id } }
  %h2= section.name

  #climbs
    - section.climbs.active.includes(:grade).each do |climb|
      = button_to climb.grade.name,
                  athletes_climb_logs_path,
                  class: climb.color_name,
                  remote: true,
                  method: :post,
                  params: { 'climb_log[climb_id]': climb.id }

  - if policy(Climb).new?
    = link_to 'Add Climb',
              new_section_climb_path(section),
              remote: true,
              class: 'new-climb-link'

  - if policy(Climb).update?
    = button_to 'Reset Section',
                section_reset_path(section),
                id: 'reset',
                remote: 'true'
